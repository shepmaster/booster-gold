%div{ class: "#{background} border-2 border-gray-300 p-6 rounded-md tracking-wide shadow-sm" }
  %div{ class: "options_toggle",
    data: { controller: "dropdown", "dropdown-open-value" => "false", aria: { haspopup: "true", expanded: "false" }}
  }
    %button#options-menu{ class: "inline-flex justify-center", aria: { expanded: "true", haspopup: "true" },
      data: { action: "click->dropdown#toggle" }
    }
      %svg.-mr-1.ml-2.h-5.w-5{"aria-hidden" => "true", :fill => "currentColor", :viewbox => "0 0 20 20", :xmlns => "http://www.w3.org/2000/svg"}
        %path{"clip-rule" => "evenodd", :d => "M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z", "fill-rule" => "evenodd"}
    %div#menu-items{ class: "dropdown-menu z-20 mt-2 absolute right-0",
      data: { "dropdown-target" => "menu" }
    }
      .overflow-hidden.bg-white.border.rounded.shadow-sm
        %a.no-underline.block.px-6.py-3.text-gray-800.bg-white.hover:bg-primary-100.transition.ease-in-out.duration-200.whitespace-nowrap{:href => "/users/edit"}
          Add to my library
        %a.no-underline.block.px-6.py-3.text-gray-800.bg-white.hover:bg-primary-100.transition.ease-in-out.duration-200.whitespace-nowrap{:href => "/account/password"}
          View template
        %a.no-underline.block.px-6.py-3.text-gray-800.bg-white.hover:bg-primary-100.transition.ease-in-out.duration-200.whitespace-nowrap{:href => "/user/connected_accounts"}
          Open in new window
        %a.no-underline.block.px-6.py-3.text-gray-800.bg-white.hover:bg-primary-100.transition.ease-in-out.duration-200.whitespace-nowrap{:href => "/subscription"}
          Download
  %div{ class: "flex items-center mb-4",
    data: { reflex: 'click->WorkflowTemplate#select_template', id: @workflow_template.id }
  }
    %div{ class: "leading-5 ml-6 sm" }
      %h5{ class: "font-semibold text-blue-600" }
        = @workflow_template.name
      %h4{ class: "text-xl font-semibold" }
        = @workflow_template.description
