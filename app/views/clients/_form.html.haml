= form_for @client do |f|
  - if @client.errors.any?
    #error_explanation
      %h2= "#{pluralize(@client.errors.count, "error")} prohibited this client from being saved:"
      %ul
        - @client.errors.full_messages.each do |message|
          %li= message

  = render(TextFieldComponent.new(form: f, attribute: :company_name))
  = render(TextFieldComponent.new(form: f, attribute: :email))
  = render(TextFieldComponent.new(form: f, attribute: :phone))

  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
