= form_for @client, builder: BoostFormBuilder do |f|
  - if @client.errors.any?
    #error_explanation
      %h2= "#{pluralize(@client.errors.count, "error")} prohibited this client from being saved:"
      %ul
        - @client.errors.full_messages.each do |message|
          %li= message

  = f.bst_text_field :company_name
  = f.bst_text_field :email
  = f.bst_text_field :phone
  = f.bst_text_area :description

  .actions
    = render(SubmitButtonComponent.new(form: f, label: 'Save'))
